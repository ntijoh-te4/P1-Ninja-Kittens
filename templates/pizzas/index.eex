<link rel="stylesheet" href="<%= "/priv/app.css" %>">
<meta charset="UTF-8">
<nav class="tonys_nav">
    <img class="tonys_logga" src="<%= "/uploads/img/tonys-pizza-logo.svg" %>" alt="SVG" />
    <img class="tonys_basket" src="<%= "/uploads/img/tonys-pizza-basket.svg" %>" alt="SVG" />
</nav>

<main_section_index>
<%= for pizza <- pizzas do %>
        <orders>
            <img class="pizza_display" src="/uploads/img/<%= pizza.img %>">
                <div_index class="name_and_ing">
                        <h1 id="pizza_name_index"><%= pizza.name %></h1>
                            <ul class="ing_list">
                                <%= for things <- pizza.ingredients do %>
                                    <ul class="ingredient_info"><%= things %></ul>
                                <% end %>
                            </ul>
                        <buttons>
                        <form action="/cart" method="post">
                            <input type="hidden" name="pizza_id" value="<%= pizza.id %>">
                            <button type="submit">VÃ¤lj</button>
                        </form>
                </div_index>
        </orders>
    <% end  %>
</main_section_index>
